{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": false, // Вимкніть, щоб перевірити, чи це допомагає
    "strict": true,
    "noEmit": false, // Змініть на false для генерації файлів JavaScript
    "esModuleInterop": true,
    "module": "commonjs", // Можливо, змініть на commonjs для сумісності
    "moduleResolution": "node", // Спробуйте node замість bundler
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
